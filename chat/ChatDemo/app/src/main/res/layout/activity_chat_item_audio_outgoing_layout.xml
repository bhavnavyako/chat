<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/chat_bubble_outgoing"
        android:textSize="18dp">

        <LinearLayout
            android:id="@+id/play_and_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_play_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:src="@drawable/play_button" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_message_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/play_and_bar"
            android:layout_marginLeft="28dp"
            android:text="5.05"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_message_playing_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/play_and_bar"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@+id/tv_message_total_time"
            android:text="5.05"
            android:textColor="@color/gray"
            android:textSize="10dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/play_and_bar"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="5.55AM"
                android:textColor="@color/gray"
                android:textSize="10dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/msg_status_client_read" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
